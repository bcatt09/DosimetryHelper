        <Button Content="Finalize" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Click="Finalize_Click" 
                Grid.Row="1" Grid.Column="0" 
                Margin="25,10"/>
        <Button Content="Cancel" 
                Style="{StaticResource MahApps.Styles.Button.Flat}"
                Click="Cancel_Click" 
                Grid.Row="1" Grid.Column="1" 
                Margin="25,10"/>
    </Grid>
